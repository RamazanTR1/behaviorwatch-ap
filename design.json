				"title": "Hesabınıza giriş yapın",
				"subtitle": "Admin paneline erişim için e-posta adresinizi ve şifrenizi girin.",
				"fields": [
					{
						"name": "email",
						"type": "email",
						"label": "E-posta",
						"placeholder": "E-postanızı girin",
						"required": true
					},
					{
						"name": "password",
						"type": "password",
						"label": "Şifre",
						"placeholder": "Şifrenizi girin",
						"required": true
					}
				],
				"footer": {
					"text": "2025 BehaviorWatch"
				}
			}
		},
		"pagination": {
			"style": "rounded",
			"show_info": true,
			"info_format": "Gösterilen {start} ile {end} arasında {total} sonuç",
			"buttons": [
				"ChevronFirst",
				"ChevronLeft",
				"1",
				"2",
				"3",
				"...",
				"4",
				"ChevronRight",
				"ChevronLast"
			]
		},
